<%- include('partials/header') %>

    <form action="/work-add">
        <h2>İş Oluştur</h2>

        <label for="baslik">Başlık</label>
        <input type="text" name="baslik" required>

        <label for="aciklama">Açıklama</label>
        <input type="text" name="aciklama" required>

        <label for="baslama">Başlama Tarihi</label>
        <input type="date" name="baslama" required>

        <label for="bitis">Bitiş Tarihi</label>
        <input type="date" name="bitis" required>

        <button type="submit">Oluştur</button>
    </form>

    <%- include('partials/footer') %>


        <script>
            const form = document.querySelector('form')
            const emailError = document.querySelector('.email.error')
            const passwordError = document.querySelector('.password.error')

            form.addEventListener('submit', async (e) => {

                emailError.textContent = ''
                passwordError.textContent = ''

                e.preventDefault()

                // input => name
                const email = form.email.value
                const parola = form.parola.value

                try {
                    let res = await fetch('/login', {
                        method: 'POST',
                        body: JSON.stringify({ email, parola }),
                        headers: { 'Content-Type': 'application/json' }
                    })

                    // API response data
                    const data = await res.json()
                    console.log(data)

                    // response hata dönerse
                    if (data.errors) {
                        emailError.textContent = data.errors.email
                        passwordError.textContent = data.errors.parola
                    }

                    // giriş başarılıysa yönlendirme
                    if (data.user) {
                        location.assign('/')
                    }

                } catch (error) {
                    console.log(error)
                }

            })
        </script>